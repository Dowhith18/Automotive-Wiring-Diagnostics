{
  "name": "Intelligent Automotive Wiring Fault Prediction & Diagnostic Manual",
  "short_name": "AutoDiag Pro",
  "description": "Professional automotive diagnostic system with AI-powered fault prediction and interactive troubleshooting manual",
  "version": "1.0.0",
  "manifest_version": 3,
  "start_url": "/index.html",
