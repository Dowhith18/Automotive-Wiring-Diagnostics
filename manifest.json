  "shortcuts": [
    {
      "name": "Quick Diagnostic",
      "short_name": "Diagnose",
      "description": "Start a new diagnostic session",
      "url": "/index.html#diagnostics",
      "icons": [
        {
          "src": "assets/icons/diagnostic-shortcut.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Vehicle Scanner", 
      "short_name": "Scanner",
      "description": "Scan vehicle VIN and codes",
      "url": "/index.html#vehicle-info",
      "icons": [
        {
          "src": "assets/icons/scanner-shortcut.png", 
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "ML Predictions",
      "short_name": "AI Analysis", 
      "description": "View AI fault predictions",
      "url": "/index.html#ml-predictions",
      "icons": [
        {
          "src": "assets/icons/ml-shortcut.png",
          "sizes": "192x192"
        }
